﻿@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/PDFCover")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html {
            font-family: Arial;
            
        }

        table {
            border-collapse: collapse;
            border: 2px solid black;
            table-layout: fixed;
            width: 1000px;
        }

        th, td {
            border-collapse: collapse;
            border: 1px solid black;
            border-spacing: 0px;
            
        }

        th, td {
            padding: 6px;
        }

        th {
            color: white;
            text-align: center;
        }
        caption{
            margin-bottom:20px;
            font-weight:bold;
            font-size:12px;
        }
        .price{
            text-align:center;
        }
        
    </style>



</head>
<body>
    @RenderBody()
</body>
</html>
